@model IEnumerable<LivrariaTJ.Models.Livro>

@{
    ViewBag.Title = "Pesquisar";
}

<h2>Pesquisar</h2>

@using (Html.BeginForm())
{
    <p>
        Procure pelo título ou pelo autor: @Html.TextBox("NomeParaPesquisa")
        <input type="submit" value="Pesquisar" />
    </p>
    <p>
        Ordenando por: @(Request.QueryString["ordenacao"])
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Titulo", "Pesquisar", new { ordenacao = "titulo" })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genero)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataPublicacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumeroPaginas)
        </th>
        <th>
            @Html.ActionLink("Autor", "Pesquisar", new { ordenacao = "autor" })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Editora)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sinopse)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImagemCapa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LinksParaCompra)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataPublicacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroPaginas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Autor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Editora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sinopse)
            </td>
            <td>
                <img src="@Url.Content(item.ImagemCapa)" alt="IMAGES" width="30" height="40" />
            </td>
            <td>
                <a href="@item.LinksParaCompra" target="_blank">Comprar</a>
            </td>
        </tr>
    }

</table>
